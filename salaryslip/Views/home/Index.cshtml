@model List<salaryslip.Models.salary>
@{
    ViewBag.Title = "Index";
}
<div style="background-color:#42f5ec;height:100%;width:100%">
<h2 style="text-align:center;font-size:50px;position:relative;top:20px">Salary slip List</h2>
<span style="position:relative;right:-710px;font-size:30px;">@Html.ActionLink("NEW ENTRY","Create","Home")</span>
<span style="position:relative;right:-1230px;font-size:30px;">@Html.ActionLink("login","login","Home")</span>
<span style="position:relative;right:-1250px;font-size:30px;">@Html.ActionLink("logout","login","Home")</span>
    <hr />

