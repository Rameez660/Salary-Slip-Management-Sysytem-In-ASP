        <th style="padding: 1px;padding-bottom:20px;  border-right: 2px solid black;border-bottom: 2px solid black">Medical Allowance</th>
        <td></td>
        <th style="padding: 1px; padding-bottom:20px; border-right: 2px solid black;border-bottom: 2px solid black">Tax</th>
        <td></td>
        <th style="padding: 1px;padding-bottom:20px;  border-right: 2px solid black;border-bottom: 2px solid black">Total</th>


    </tr>

@foreach (var stud in Model)
{
    <tr>
        <td style="padding: 1px; text-align: center; border-right: 1px solid black">
            @stud.id
        </td>
        <td></td>

        <td style="padding: 1px; border-right: 1px solid black">
            @stud.name
        </td>
        <td></td>

        <td style="padding: 1px; border-right: 1px solid black">
            @stud.employerid
        </td>
        <td></td>

        <td style="padding: 1px; text-align: center; border-right: 1px solid black">
            @stud.title
        </td>
        <td></td>
        <td style="padding: 1px; text-align: center; border-right: 1px solid black">
            @stud.depart
        </td>
        <td></td>
        <td style="padding: 1px; text-align: center; border-right: 1px solid black">
            @stud.accno
        </td>
        <td></td>
        <td style="padding: 1px; text-align: center; border-right: 1px solid black">
        @stud.basicsalary
        </td>
        <td></td>
        <td style="padding: 1px; text-align: center; border-right: 1px solid black">
            @stud.mealallow
        </td>
        <td></td>
        <td style="padding: 1px; text-align: center; border-right: 1px solid black">
            @stud.transportallow
        </td>
        <td></td>
        <td style="padding: 1px; text-align: center; border-right: 1px solid black">
            @stud.medicalallow
        </td>
        <td></td>
        <td style="padding: 10px; text-align: center; border-right: 1px solid black">
            @stud.tax
        </td>
        <td></td>
                <td style="padding:1px;text-align:center;border-right:1px solid black">
           @stud.total
        </td>
        <td></td>

              <td style="padding:10px;">
            @Html.ActionLink("Print", "print", "Home", new { id=@stud.id},null)
        </td>
        <td></td>
             
          <td style="padding:10px;">
            @Html.ActionLink("Update", "Update", "Home", new { id=@stud.id},null)
        </td>
        <td></td>
         <td style="padding:10px;">
            @Html.ActionLink("Delete", "Delete", "Home", new { id=@stud.id},null)
        </td>
    </tr>
    
}
